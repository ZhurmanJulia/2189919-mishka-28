{
  "name": "mishka-28",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.4.0",
    "browser-sync": "2.27.7",
    "del": "^7.0.0",
    "gulp": "4.0.2",
    "gulp-cache": "^1.1.3",
    "gulp-dart-sass": "^1.0.2",
    "gulp-esbuild": "^0.11.2",
    "gulp-html-bemlinter": "^2.1.4",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-sharp-responsive": "^0.4.1",
    "gulp-stacksvg": "^2.0.2",
    "gulp-svgmin": "^4.1.0",
    "gulp-w3c-html-validator": "^5.2.0",
    "postcss-calc": "^9.0.1",
    "postcss-csso": "^6.0.1",
    "postcss-preset-env": "^9.0.0",
    "postcss-sort-media-queries": "^5.2.0",
    "stylelint": "13.13.1",
    "stylelint-config-htmlacademy": "0.1.11"
  },
  "scripts": {
    "build": "gulp build",
    "cache:clear": "gulp clearCache",
    "editorconfig": "editorconfig-cli",
    "fix:scss": "stylelint \"source/sass/**/*.scss\" --custom-syntax postcss-scss --fix",
    "lint": "gulp lint && npm run lint:scss && npm run editorconfig",
    "lint:scss": "stylelint \"source/sass/**/*.scss\" --custom-syntax postcss-scss",
    "start": "gulp"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all",
    "not < 0.25%"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "engines": {
    "node": "^16"
  },
  "type": "module"
}
