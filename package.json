{
  "name": "mishka-28",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.4.0",
    "browser-sync": "2.27.7",
    "gulp": "4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "postcss": "8.3.11",
    "stylelint": "13.13.1",
    "stylelint-config-htmlacademy": "0.1.11"
  },
  "scripts": {
    "build": "gulp build",
    "cache:clear": "gulp clearCache",
    "editorconfig": "editorconfig-cli",
    "fix:scss": "stylelint \"source/sass/**/*.scss\" --custom-syntax postcss-scss --fix",
    "lint": "gulp lint && npm run lint:scss && npm run editorconfig",
    "lint:scss": "stylelint \"source/sass/**/*.scss\" --custom-syntax postcss-scss",
    "start": "gulp"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all",
    "not < 0.25%"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "engines": {
    "node": "^16"
  },
  "type": "module"
}
